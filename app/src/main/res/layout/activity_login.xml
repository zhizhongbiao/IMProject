<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/meinv4"
    tools:context="com.example.alv_chi.improject.activity.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       />

    <LinearLayout
        android:id="@+id/llUserName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_margin_III"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/middle_margin"
        android:layout_marginLeft="@dimen/big_margin_IIIII"
        android:layout_marginRight="@dimen/big_margin_IIIII"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:focusable="true"
        >

        <TextView
            android:text="UserName:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:gravity="center"
            style="@style/MiddleBlackTextStyle"
            />

        <EditText
            android:hint="请输入用户名"
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            style="@style/MiddleBlackTextStyle"
            android:singleLine="true"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUserLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_margin_III"
        android:layout_below="@+id/llUserName"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/middle_margin"
        android:layout_marginLeft="@dimen/big_margin_IIIII"
        android:layout_marginRight="@dimen/big_margin_IIIII"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:focusable="false"
        >

        <TextView
            android:text="Password:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            style="@style/MiddleBlackTextStyle"
            android:id="@+id/textView" />

        <EditText
            android:hint="请输入用户名"
            android:id="@+id/etUserLoginPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            style="@style/MiddleBlackTextStyle"
            android:singleLine="true"
            />

    </LinearLayout>

    <Button
        android:onClick="onUserLoginClick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_margin_III"
        android:layout_marginLeft="@dimen/big_margin_IIIII"
        android:layout_marginRight="@dimen/big_margin_IIIII"
        android:id="@+id/button"
        android:text="登陆"
        style="@style/BigBlackTextStyle"
        android:focusable="false"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/view" />


</LinearLayout>
