<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Text Style -->
    <style name="SmallGrayTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/grayII</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="MiddleBlackTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
    </style>

    <style name="MiddleWhiteTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
    </style>

    <style name="BigBlackTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="BigGrayTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/grayII</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="BigBlackTextStyleII" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_text_size_II</item>
    </style>

    <style name="BigWihteTextStyleIII" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_text_size_III</item>
    </style>

    <style name="BigBlackTextStyleIII" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/big_text_size_III</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
